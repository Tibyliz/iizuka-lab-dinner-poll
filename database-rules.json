{
  "rules": {
    ".read": true,
    ".write": true,
    
    "config": {
      ".indexOn": ["setting"]
    },
    
    "responses": {
      ".indexOn": ["timestamp", "position", "attendance"],
      "$responseId": {
        ".validate": "newData.hasChildren(['timestamp', 'name', 'attendance', 'position'])"
      }
    },
    
    "archives": {
      ".indexOn": ["createdDate"],
      "$archiveId": {
        ".validate": "newData.hasChildren(['archiveName', 'createdDate', 'archiveData'])"
      }
    }
  }
}
